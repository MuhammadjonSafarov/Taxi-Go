<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardUseCompatPadding="false"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/avatar_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="0dp"
            app:srcCompat="@drawable/ic_avatar" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2">

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Kirish/Ro'yxatdan o'tish"
            android:paddingHorizontal="12dp"
            android:paddingVertical="2dp"
            android:textAllCaps="false"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/shape_navigator_primary"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circle_rounded_regular_bold"
            android:paddingStart="12dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="Safarov Muhammadjon"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@font/circle_rounded_regulary"
            android:paddingStart="12dp"
            android:text="+998 90 063 66 90"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/driver_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTextGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="-48dp"
        android:layout_marginTop="16dp"
        android:rotation="45"
        android:visibility="gone"
        android:orientation="horizontal"
       >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/padik"
            android:layout_marginStart="64dp"
            android:paddingStart="8dp"
            android:layout_gravity="center"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginEnd="36dp"
            android:paddingStart="8dp"
            android:text="Haydovchi"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/open_sans_extra_boldly"
            app:fontFamily="@font/open_sans_extra_boldly"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
