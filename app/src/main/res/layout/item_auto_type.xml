<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_road"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/circle_rounded_regular_bold"
        android:textColor="@color/colorTextBlack"
        android:textSize="18dp"
        app:fontFamily="@font/circle_rounded_regular_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cobalt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circle_rounded_regular_bold"
        android:textColor="@color/colorTextBlack"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:fontFamily="@font/circle_rounded_regular_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5 o'rindiq" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/circle_rounded_regulary"
        android:textColor="@color/colorTextBlack"
        android:textSize="15dp"
        app:fontFamily="@font/circle_rounded_regulary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="@string/car_tools_text" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        android:layout_marginTop="6dp"
        android:background="@color/colorTextGrayHolo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />
</androidx.constraintlayout.widget.ConstraintLayout>
