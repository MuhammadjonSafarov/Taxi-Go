<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardMaxElevation="0dp"
    app:cardElevation="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_extra_boldly"
            app:fontFamily="@font/open_sans_extra_boldly"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Toshkent - Sarosiyo"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="2dp"
            android:fontFamily="@font/circle_rounded_regulary"
            app:fontFamily="@font/circle_rounded_regulary"
            android:textColor="@color/colorTextBlack"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="Har kuni"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/circle_rounded_regular_bold"
            app:fontFamily="@font/circle_rounded_regular_bold"
            android:textColor="@color/colorTextBlack"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            tools:text="100 000 so\'m" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circle_rounded_regulary"
            android:gravity="center"
            android:textColor="@color/colorTextGray"
            android:textSize="14dp"
            android:textStyle="normal"
            android:layout_marginStart="16dp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_clock_nine_svgrepo_com"
            app:fontFamily="@font/circle_rounded_regulary"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Yurish vaqti : " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="14dp"
            android:textStyle="bold"
            android:fontFamily="@font/circle_rounded_regulary"
            app:fontFamily="@font/circle_rounded_regulary"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            tools:text="11:02" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

