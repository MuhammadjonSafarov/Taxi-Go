<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.address.AddressFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/et_auto_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/shape_input_label_bg"
        android:elevation="0dp"
        android:theme="@style/AppSearchView"
        app:closeIcon="@drawable/ic_circle_close"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryBackground="@color/white"
        app:queryHint="Avtomabil nomini kiriting"
        app:searchHintIcon="@drawable/ic_baseline_search"
        app:searchIcon="@drawable/ic_baseline_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_driver_cars"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@drawable/shape_input_label_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_auto_model"
        tools:listitem="@layout/item_auto_type"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rv_driver_cars"
        app:layout_constraintEnd_toEndOf="@+id/rv_driver_cars"
        app:layout_constraintStart_toStartOf="@+id/rv_driver_cars"
        app:layout_constraintTop_toBottomOf="@+id/et_auto_model"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
