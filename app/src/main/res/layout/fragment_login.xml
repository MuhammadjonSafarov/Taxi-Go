<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLoginTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirish"
        android:textColor="@color/colorTextBlack"
        android:textSize="24dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon raqamingizni kiriting "
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:fontFamily="@font/circle_rounded_regulary"
        android:fontFamily="@font/circle_rounded_regulary"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLoginTittle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputLayoutSurname"
        style="@style/Widget.TextInputLayout.Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+998 (XX) XX XX XX"
            android:imeOptions="actionNext"
            android:padding="14dp"
            android:textSize="16dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_conform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_primary"
        android:fontFamily="@font/circle_rounded_regular_bold"
        android:gravity="center"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:text="@string/next"
        android:enabled="false"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fontFamily="@font/circle_rounded_regular_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>